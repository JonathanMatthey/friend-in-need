        <script type="text/javascript">

          $(document).ready(function(){

            $.ajax({
              type: "GET",
              url: "http://localhost:3000/api/sightings",
              success: function(data){
                console.log(data)
                var locations = [];

                $.each(data,function(i,obj){
                  locations.push([
                    obj.name,
                    obj.lat,
                    obj.long,
                    obj.id
                    ])
                });
                // var locations = [
                //   ['Bondi Beach', 40.69847032728747, -73.9514422416687, 4],
                //   ['Bondi Beach', 40.69847032728747, -73.9414422416687, 3],
