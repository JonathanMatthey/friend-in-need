<div class="page-wrapper" style="background-image:url(https://mattweberphotos.files.wordpress.com/2013/12/christmascart-2012-copy.jpg?w=1222&h=853);height:100%;width:100%;text-align:center;background-size:cover;">

  <div class="main-content" style="text-align:left;background-color:white;padding:50px; display:inline-block;margin:0 auto;margin-top:100px;">

  <style>
  th,
  td{
    padding: 5px 50px 5px 0;
  }
  h1{
    margin-bottom:30px;
    margin-top:0px;
    padding-top:0px;
  }
  </style>
    <h1>Listing sightings</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Lat</th>
          <th>Long</th>
          <th>Unconscious</th>
          <th>Intoxicated</th>
          <th>Fuckedup</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @sightings.each do |sighting| %>
        <tr>
          <td><%= sighting.name %></td>
          <td><%= sighting.lat %></td>
          <td><%= sighting.long %></td>
          <td><%= sighting.unconscious %></td>
          <td><%= sighting.intoxicated %></td>
          <td><%= sighting.fuckedup %></td>
          <td><%= link_to 'Show', sighting %></td>
          <td><%= link_to 'Edit', edit_sighting_path(sighting) %></td>
          <td><%= link_to 'Destroy', sighting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Sighting', new_sighting_path %>
  </div>
</div>